@model List<Movie>
@{
    ViewData["Title"] = "Home Page";
}

<div class="mb-2">
    <a asp-controller="Movie" asp-action="Add">Add New Movie</a>
</div>

<h2><
<img src="https://wallpapercave.com/wp/aohMLJB.jpg" alt="Laptop" width="600" height="550">
